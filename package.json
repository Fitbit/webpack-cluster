{
  "name": "webpack-cluster",
  "description": "Helps to make parallel webpack compilation easily",
  "main": "dist/index.js",
  "bin": "dist/bin/index.js",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./coverage && rm -rf ./docs",
    "eslint": "eslint ./ --cache",
    "build": "babel src --out-dir dist --source-maps",
    "test": "babel-node jasmine.js",
    "cover": "NODE_ENV=test nyc --reporter=lcov jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "postcover": "nyc report",
    "codeclimate": "codeclimate-test-reporter < ./coverage/lcov.info",
    "gitdown": "gitdown ./.gitdown/README.md --output-file ./README.md",
    "jsdoc": "jsdoc ./src -c ./jsdoc.json",
    "gh-pages": "gh-pages -r https://${GH_TOKEN}@github.com/mdreizin/webpack-cluster.git -d docs",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "author": "Marat Dreizin <marat.dreizin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdreizin/webpack-cluster.git"
  },
  "keywords": [
    "webpack",
    "webpack cluster",
    "webpack parallel"
  ],
  "bugs": {
    "url": "https://github.com/mdreizin/webpack-cluster/issues"
  },
  "homepage": "https://github.com/mdreizin/webpack-cluster",
  "dependencies": {
    "babel-runtime": "^6.9.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "glob": "^7.0.3",
    "glob2base": "0.0.12",
    "is-ci": "^1.0.8",
    "lodash": "^4.13.1",
    "memory-fs": "^0.3.0",
    "messageformat": "^0.3.1",
    "minimatch": "^3.0.2",
    "observatory": "^1.0.0",
    "pretty-error": "^2.0.0",
    "pretty-hrtime": "^1.0.2",
    "throat": "^3.0.0",
    "tildify": "^1.2.0",
    "stats-writer-webpack-plugin": "^1.0.0",
    "yargs": "^4.7.1"
  },
  "peerDependencies": {
    "webpack": "1.x",
    "webpack-config": "5.x"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^1.0.2",
    "babel-plugin-transform-builtin-extend": "^1.1.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "codeclimate-test-reporter": "^0.3.1",
    "eslint": "^3.0.0",
    "eslint-config-mdreizin": "^1.1.1",
    "eslint-plugin-babel": "^3.3.0",
    "fs-extra": "^0.30.0",
    "gh-pages": "^0.11.0",
    "gitdown": "^2.4.8",
    "jasmine": "^2.4.1",
    "jasmine-spec-reporter": "^2.4.0",
    "jsdoc": "^3.4.0",
    "nyc": "^7.0.0",
    "semantic-release": "^4.3.5",
    "travis-after-all": "^1.4.4",
    "webpack": "^1.13.1",
    "webpack-config": "^5.2.0"
  }
}
